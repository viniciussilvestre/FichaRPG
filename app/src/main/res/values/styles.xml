<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="characterInfoStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="mainValueStyle">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">number</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">44sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="classAndLevelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="nameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/sheetElementsElevation</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="labelStyle">
        <item name="android:layout_width">109dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/sheetElementsElevation</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="modfierStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="atributeStyleLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/sheetElementsElevation</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>